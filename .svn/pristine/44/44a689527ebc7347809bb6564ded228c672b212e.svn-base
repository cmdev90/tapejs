html, body {
  height: 100%;
  /*background-color: whiteSmoke;*/
}
table{
  font-size: 14px;
}
#banner{
  width:100%;
  height: 70px;
}
#side-nav{
  float:left;
  width:150px;
  padding:10px 15px;
}
#main-content{
  margin-left:160px; 
  padding:10px; 
  min-height:400px;
}

/* Wrapper for page content to push down footer */
/* Negative indent footer by it's height */
#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto -30px;
}
/* Set the fixed height of the footer here */
#push, footer {
  height: 30px;
}
footer {
  padding:10px;
  text-align: center;
  border-top: 1px solid #D4D4D4;
}

/* Lastly, apply responsive CSS fixes as necessary */
@media (max-width: 767px) {
  footer {
    margin-left: -20px;
    margin-right: -20px;
    padding-left: 20px;
    padding-right: 20px;
  }
}

.project:hover{
  cursor: pointer;
  border: 1px solid #9ecaed;
  box-shadow: 0 0 10px #9ecaed;
}


.notif {
  padding:5px;
  border: 1px solid whiteSmoke;
  border-radius: 5px;
  min-height : 40px;
  margin-bottom: 10px;
  width:95%;
  margin-left: auto;
  margin-right: auto;
}
.notif img {
  width:60px;
  height:60px;
  float:left;
  border-radius: 5px;
  border: 1px solid whiteSmoke;
}
.notif-body {
  margin-left:70px;
}
.notif-title{
  padding-bottom: 5px;
}
.notif-message {
  font-size: 11px;
  line-height: 16px;
  max-height: 50px;
  overflow: hidden;
  margin-bottom: 5px;
}
.notif-info {
  font-size: 11px;
  line-height: 15px;
  text-align: right;
  padding-right: 10px;
}
.notif:hover{
  cursor: pointer;
  border: #9ecaed;
  box-shadow: 0 0 10px #9ecaed;
}



.form-actions-changed{
  text-align: right;
}
.form-actions-changed .btn{
  width: 125px;
}
.form-actions-changed .btn:first-child{
  margin-right: 10px;
}
.doc-list{
  height:300px;
  overflow: auto;
  border:1px solid whiteSmoke;
}
.doc{
  margin: 5px 10px;
  border-radius: 5px;
  border: 1px solid whiteSmoke;
  padding:5px;
  min-height:50px;
}
.doc:hover{
  cursor: pointer;
  border: #9ecaed;
  box-shadow: 0 0 10px #9ecaed; 
}
.doc img{
  width:40px;
  height:40px;
  float: left;
}
.doc .title{
  margin-left: 45px;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  white-space: nowrap;
}
.doc .timestamp{
  text-align: right;
  font-size: 11px;
  margin-top: 5px;
  font-style: italic;
}
.poject-feed{
  height: 170px;
  overflow: auto;
  border: 1px solid whiteSmoke;
  padding: 5px;
}
.poject-feed .notif{
  min-height : 60px;
}
.indicator-modal{
  margin-left: 0;
  left: 5%;
  z-index: 1050;
  width: 90%;
}
.modal-responsive{
  margin-left: 0;
  left: 15%;
  z-index: 1050;
  width: 70%;
}
.modal-responsive .modal-body{
  max-height:480px;
}
.file-modal-table td{
  padding: 5px;
}
.file-modal-table td div{
  min-height: 150px;
  overflow: auto;
}


.tab-content{
  border-left: 1px solid #DDDDDD;
  border-right: 1px solid #DDDDDD;
  border-bottom: 1px solid #DDDDDD;
  padding: 10px;
  margin-top: -20px;
}


.fileinput-button input {
  position: absolute;
  top: 0;
  right: 0;
  margin: 0;
  opacity: 0;
  filter: alpha(opacity=0);
  transform: translate(-300px, 0) scale(4);
  font-size: 23px;
  direction: ltr;
  cursor: pointer;
}
input[type="file"] {
  display: block;
}
.fileupload-buttonbar .btn, .fileupload-buttonbar .toggle {
margin-bottom: 5px;
}
.fileinput-button {
position: relative;
overflow: hidden;
}

#progress{
  height:150px;
  overflow: auto;
  padding: 10px;
  border: 1px solid #DDDDDD;
  border-radius: 5px;
}


#addActivity {
  position: fixed;
  top: 10%;
  left: 37%;
  z-index: 1050;
  width: 60%;
  margin-left: -280px;
  background-color: #ffffff;
  border: 1px solid #999;
  border: 1px solid rgba(0, 0, 0, 0.3);
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
  -webkit-box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
  -moz-box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
  box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
  -webkit-background-clip: padding-box;
  -moz-background-clip: padding-box;
  background-clip: padding-box;
  outline: none;
}